{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "start": {
          "cmd": "uvicorn main:app --host 0.0.0.0 --port $PORT"
        }
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "PORT": "8080"
  }
}
